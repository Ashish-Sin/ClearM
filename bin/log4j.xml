<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'
                     debug="true">

    <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="default.file" class="biz.minaret.log4j.DatedFileAppender">

        
        <param name="DatePattern" value="'.'yyyy-MM-dd'.log'"/>
        <param name="file" value="Logs/ExecutionLog.log"/>
        <param name="threshold" value="debug"/>
        <param name="MaxBackupIndex" value="2"/>
        <param name="fileAppend" value="true"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>


    <!-- Silence the web driver -->
    <logger name="org.apache.http">
        <level value="off"/>
    </logger>

    <root>
        <level value="debug"/>
        <!-- appender-ref ref="consoleAppender"/-->
        <appender-ref ref="default.file"/>
    </root>


</log4j:configuration>